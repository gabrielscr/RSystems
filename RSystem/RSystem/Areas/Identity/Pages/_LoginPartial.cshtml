@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Logado como: @UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <div class="d-inline-flex">
        <ul class="nav navbar-nav navbar-right">
            
                <li><a asp-area="Identity" asp-page="/Account/Register" class="nav-link logout"> <span class="d-none d-sm-inline-block">Registrar</span><i class="fas fa-sign-out-alt"></i></a></li>
                <li><a asp-area="Identity" asp-page="/Account/Login" class="nav-link logout"> <span class="d-none d-sm-inline-block">Login</span><i class="fas fa-sign-out-alt"></i></a></li>
        </ul>
        </div>
        }
